<!-- sản phẩm -->
<div id="formSP"
    style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; ">
    <form class="border p-5 w-50 bg-white" style="height: fit-content; position: relative; top: 20px" method="post"
        enctype="multipart/form-data" action="/updateProduct/<%= data.rowProduct.masp %>">
   
        <div style="display: flex; justify-content: center;">
            <span style="font-weight: bold;"> Sửa Sản phẩm</span>
        </div>
        <div class="form-group">
            <label>Mã sản phẩm</label>
            <p class="form-control"><%= data.rowProduct.masp %></p>
        </div>
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input type="text" class="form-control"
                placeholder="Tên loại sản phẩm" name="tensp" value="<%= data.rowProduct.tensp %>">
        </div>
        <div class="form-group">
            <label>Giá</label>
            <input type="text" class="form-control"
                placeholder="Giá sản phẩm" name="giasp" value="<%= data.rowProduct.giasp %>">
        </div>
        <div class="form-group">
            <label>Thông tin chi tiết</label>
            <input type="text" class="form-control"
                placeholder="Thông tin chi tiết" name="thongtinchitiet" value="<%= data.rowProduct.thongtinchitiet %>">
        </div>
        <div class="form-group">
            <label>Số lượng sản phẩm</label>
            <input type="number" class="form-control"
                placeholder="Số lượng sản phẩm" name="soluongsp" value="<%= data.rowProduct.soluongsp %>">
        </div>
        <div class="form-group">
            <label>Hình ảnh sản phẩm</label>
            <input type="file"
                name="hinhanh">
        </div>
        <div class="form-group">
            <label>Loại sản phẩm</label>
            <select name="maloai">
                <% if(data.rows){ %>
                    <% for(let i = 0; i < data.rows.length; i++) { %>
                        <option value="<%= data.rows[i].maloai %>" 
                            <% if(data.rows[i].maloai == data.rowProduct.maloai) { %> selected <% } %>>
                            <%= data.rows[i].tenloai %>
                        </option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label>Nhà sản xuất</label>
            <select name="mansx">
                <% if(data.listNSX){ %>
                    <% for(let i = 0; i < data.listNSX.length; i++) { %>
                        <option value="<%= data.listNSX[i].mansx %>" 
                            <% if(data.listNSX[i].mansx == data.rowProduct.mansx) { %> selected <% } %>>
                            <%= data.listNSX[i].tennsx %>
                        </option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary" style="width: 80px;">Lưu</button>
        </div>
    </form>
</div>