
<div id="formSP"
    style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; margin-top: 10px;">
    <form class="border p-5 w-50 bg-white" style="height: 700px; position: relative; top: 20px" method="post"
         action="/updateGuest/<%= data.rows.username %>">
   
        <div style="display: flex; justify-content: center;">
            <span style="font-weight: bold;"> Sửa thông tin khách hàng</span>
        </div>
     
        <div class="form-group">
            <label>Username</label>
            <p class="form-control"><%= data.rows.username %></p>
        </div>
        <div class="form-group">
            <label>Fullname</label>
            <input type="text" class="form-control"
                placeholder="Full Name" name="fullname" value="<%= data.rows.fullname %>">
        </div>

        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control"
                placeholder="Address" name="address" value="<%= data.rows.address %>">
        </div>

        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary" style="width: 80px;">Lưu</button>
        </div>
    </form>
</div>