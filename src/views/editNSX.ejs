<!-- nhà sản xuất -->
<div id="formNSX"
    style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; margin-top: 100px; ">
    <form class="border p-5 w-50 bg-white" method="post" action="/updateNSX/<%= data.rowNSX.mansx %>" style="position: relative; top: 100px; height: 550px;">
    
        <div style="display: flex; justify-content: center;">
            <span style="font-weight: bold;"> Sửa Nhà Sản Xuất</span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Mã nhà sản xuất</label>
            <p class="form-control">
                <%= data.rowNSX.mansx %></p>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Tên nhà sản xuất</label>
            <input type="text" class="form-control"
                placeholder="Tên loại sản phẩm" name="tennsx" value="<%= data.rowNSX.tennsx %>">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Loại sản phẩm</label>
            <select name="loaisp">
                <% if(data.rows) { %>
                    <% for(let i = 0; i < data.rows.length; i++) { %>
                        <option value="<%= data.rows[i].tenloai %>" 
                            <%= (data.rows[i].tenloai === data.rowNSX.loaisp) ? 'selected' : '' %>>
                            <%= data.rows[i].tenloai %>
                        </option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email nhà sản xuất</label>
            <input type="text" class="form-control"
                placeholder="Tên loại sản phẩm" name="emailnsx" value="<%= data.rowNSX.emailnsx %>">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Địa chỉ nhà sản xuất</label>
            <input type="text" class="form-control"
                placeholder="Tên loại sản phẩm" name="diachinsx" value="<%= data.rowNSX.diachinsx %>">
        </div>
        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary" style="width: 80px;">Lưu</button>
        </div>
    </form>
</div>